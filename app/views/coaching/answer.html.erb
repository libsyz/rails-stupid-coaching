


<div class="wrapper text-center">
  <div class="container text-center">




    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://www.unsplash.it/1000/1000');">
      <div class="card-category">Your question</div>
      <div class="card-description">
        <h2> <%= @question %> </h2>
      </div>
    </div>

    <div class="card text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://www.unsplash.it/1000/1000');">
    <div class="card-category">Your answer</div>
      <div class="card-description">
        <h2> <%= @answer %> </h2>
        <h2> <%= @coach_enhanced %> </h2>
      </div>
    </div>



    <div class="back btn btn-primary">
     <%= link_to "Ask another question", ask_path %>
    </div>

  </div>


</div>

